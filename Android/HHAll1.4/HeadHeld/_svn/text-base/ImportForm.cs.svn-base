using System;
using System.Linq;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Text;
using System.Windows.Forms;
using System.Data.SqlServerCe;
using System.Threading;
using DoHome.HandHeld.Client.DataAccess;

namespace DoHome.HandHeld.Client
{
    public partial class ImportForm : Form
    {
        static bool _imported = false;

        private static void SynchonizeData()
        {
            Synchonize sync = new Synchonize();
            sync.SyncBranch();
            sync.SyncWarehouse();
            sync.SyncEmployee();
            sync.SyncLocationCheckAgenda();

            _imported = true;
        }

        public ImportForm()
        {
            InitializeComponent();
        }

        private void btnClose_Click(object sender, EventArgs e)
        {
            this.DialogResult = DialogResult.Cancel;
            this.Close();
        }

        private void btnImport_Click(object sender, EventArgs e)
        {
            try
            {
                btnImport.Enabled = false;
                btnClose.Enabled = false;
                //timer1.Enabled = true;
                _imported = false;
                Cursor.Current = Cursors.WaitCursor;
                SynchonizeData();
                Cursor.Current = Cursors.Default;
                 btnImport.Enabled = true;
                 btnClose.Enabled = true;

                //Thread t = new Thread(SynchonizeData);// Kick off a new thread
                //t.Start();
            }
            catch (Exception ex)
            {
                Cursor.Current = Cursors.Default;
                //progressBar3.Value = 0;
                //timer1.Enabled = false;
                btnImport.Enabled = true;
                btnClose.Enabled = true;
                GlobalMessageBox.ShowError(ex);
            }
        }

        private void EnterPriceForm_Load(object sender, EventArgs e)
        {
            Utils.FormSetCenterSceen(this);
        }

        private void OnTimer(object sender, EventArgs e)
        {

            if (progressBar3.Value == progressBar3.Maximum)
            {
                progressBar3.Value = progressBar3.Minimum;
            }
            progressBar3.Increment(5);

            if (_imported)
            {
                progressBar3.Value = 100;
                timer1.Enabled = false;
                btnImport.Enabled = true;
                btnClose.Enabled = true;
                GlobalMessageBox.ShowInfomation("นำเข้าข้อมูลจากเซิฟร์เวอร์เรียบร้อยแล้ว !");
                this.Close();
            }
        }


    }
}